# Airflow Configuration
# Copy this file to .env and update the values

# Airflow UID - should match the user running docker on the host
# On Linux, run: echo $(id -u)
AIRFLOW_UID=50000

# PostgreSQL Configuration
POSTGRES_USER=airflow
POSTGRES_PASSWORD=airflow
POSTGRES_DB=airflow

# Airflow Fernet Key
# Generate a new key with: python -c "from cryptography.fernet import Fernet; print(Fernet.generate_key().decode())"
AIRFLOW_FERNET_KEY=your-fernet-key-here

# Airflow Webserver Secret Key
# Generate a new key with: python -c "import secrets; print(secrets.token_hex(32))"
AIRFLOW_WEBSERVER_SECRET_KEY=your-webserver-secret-key-here

# Airflow Admin User
AIRFLOW_ADMIN_USERNAME=admin
AIRFLOW_ADMIN_PASSWORD=admin
AIRFLOW_ADMIN_FIRSTNAME=Admin
AIRFLOW_ADMIN_LASTNAME=User
AIRFLOW_ADMIN_EMAIL=admin@example.com

# Additional pip requirements (optional)
# _PIP_ADDITIONAL_REQUIREMENTS=
